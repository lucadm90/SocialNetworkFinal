<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

                <div class="form-group">
                  <%= f.label :current_password, "Current Password" %> <i>(we need your current password to confirm your changes)</i><br>
                   <%= f.password_field :current_password, :class=>"form-control", :placeholder =>"Current Password"%>
                 </div>


                <div class="form-group">
                  <%= f.label :password, "New Password" %>
                  <%= f.password_field :password, :class=>"form-control", :placeholder =>"Password"%>
                </div>

                <div class="form-group">
                  <%= f.label :password_confirmation,"Password Confirmation" %>
                  <%= f.password_field :password_confirmation, class:"form-control", :placeholder =>"Password Confirmation"%>
                </div>
            <br>
        <%= f.submit "Edit password", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>